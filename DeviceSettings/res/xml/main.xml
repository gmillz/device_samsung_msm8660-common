<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<PreferenceCategory
    	android:title="@string/category_touchkey_title">
	    <!-- Sweep2Wake -->
	    <CheckBoxPreference
	        android:key="s2w"
	        android:title="@string/s2w_title_head"
	        android:summary="@string/s2w_summary_head" />
	    <!-- DoubleTap2Wake -->
	    <ListPreference
	        android:key="dt2w"
	        android:title="@string/dt2w_title_head"
	        android:summary="@string/dt2w_summary_head"
	        android:entries="@array/dt2w_entries"
	        android:entryValues="@array/dt2w_entries_values"
	        android:defaultValue="0" />
	    <!-- DoubleTap2Sleep -->
	    <ListPreference
	        android:key="dt2s"
	        android:title="@string/dt2s_title_head"
	        android:summary="@string/dt2s_summary_head"
	        android:entries="@array/dt2s_entries"
	        android:entryValues="@array/dt2s_entries_values"
	        android:defaultValue="0" />
	    <!-- BLN Timeout -->
	    <ListPreference
	        android:key="bln_timeout"
	        android:title="@string/bln_timeout_title_head"
	        android:summary="@string/bln_timeout_summary_head"
	        android:entries="@array/bln_timeout_entries"
	        android:entryValues="@array/bln_timeout_entries_values"
	        android:defaultValue="600000" />
	</PreferenceCategory>

	<PreferenceCategory
    	android:title="@string/category_display_title">
	    <!-- Panel UV -->
	    <ListPreference
	        android:key="panel_uv"
	        android:title="@string/paneluv_title_head"
	        android:summary="@string/paneluv_summary_head"
	        android:entries="@array/paneluv_entries"
	        android:entryValues="@array/paneluv_entries_values"
	        android:defaultValue="0" />
	</PreferenceCategory>

	<PreferenceCategory
    	android:title="@string/category_misc_title">
	    <!-- Low Power Flash -->
	    <CheckBoxPreference
	        android:key="lp_flash"
	        android:title="@string/lp_flash_title_head"
	        android:summary="@string/lp_flash_summary_head" />
	</PreferenceCategory>

</PreferenceScreen>
